<% if flash[:notice] then %>
	<div class="alert">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		<%= flash[:notice] %>
	</div>
<% end -%>
<% if flash[:success] then %>
	<div class="alert alert-success">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		<%= flash[:success] %>
	</div>
<% end -%>
<% if flash[:error] then %>
	<div class="alert alert-error">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		<%= flash[:error] %>
	</div>
<% end -%>
<% if flash[:alert] then %>
	<div class="alert">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		<%= flash[:alert] %>
	</div>
<% end %>